{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": [
    "cs-CZ",
    "cs",
    "de-DE",
    "de",
    "en-US",
    "en",
    "es-AR",
    "es-CL",
    "es-CO",
    "es-ES",
    "es-MX",
    "es-PE",
    "es",
    "fr-FR",
    "fr",
    "it-IT",
    "it",
    "pl-PL",
    "pl",
    "pt-BR",
    "pt-PT",
    "pt",
    "tr-TR",
    "tr"
  ],
  "tsConfig": "./tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "./src/generated/locales",
    "localeCodesModule": "./src/generated/locale-codes.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff/"
  }
}
